%h1 Listing products

%table
  %tr
    %th Title
    %th Description
    %th Price
    %th
    %th
    %th

  - products.each do |product|
    %tr
      %td= product.title
      %td= product.description
      %td= product.price
      %td= link_to 'Show', category_product_path(product.category, product)
      %td= owner_only_link_to product, 'Edit', edit_category_product_path(product.category, product)
      %td= owner_only_link_to product, 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }

%br
